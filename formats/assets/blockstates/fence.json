{
    "multipart": [
        {
            "apply": {
                "model": "{mod_name}:block/{id}_post"
            }
        },
        {
            "apply": {
                "model": "{mod_name}:block/{id}_side",
                "uvlock": true
            },
            "when": {
                "north": "true"
            }
        },
        {
            "apply": {
                "model": "{mod_name}:block/{id}_side",
                "uvlock": true,
                "y": 90
            },
            "when": {
                "east": "true"
            }
        },
        {
            "apply": {
                "model": "{mod_name}:block/{id}_side",
                "uvlock": true,
                "y": 180
            },
            "when": {
                "south": "true"
            }
        },
        {
            "apply": {
                "model": "{mod_name}:block/{id}_side",
                "uvlock": true,
                "y": 270
            },
            "when": {
                "west": "true"
            }
        }
    ]
}